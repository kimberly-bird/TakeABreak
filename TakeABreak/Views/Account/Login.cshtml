@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="thumbnail">
            <img src="~/images/clock.png" alt="clock" class="login-image img-responsive" />
            <div class="caption">
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-inline">
                    <h3 class="text-center">Welcome Back!</h3>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group login-form">
                        <label asp-for="Email" class="sr-only"></label>
                        <input asp-for="Email" class="form-control" placeholder="email@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group login-form">
                        <label asp-for="Password" class="sr-only"></label>
                        <input asp-for="Password" class="form-control" placeholder="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group login-form">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group login-form">
                        <button type="submit" class="btn btn-primary login-form">Log in</button>
                    </div>
                    <div class="form-group login-form">
                        <p>
                            <a asp-action="ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
