@model TakeABreak.Models.Break

@{
    ViewData["Title"] = "Create";
}

<h2>Add a New Break</h2>

<hr />

<div class="row">
    <div class="col-sm-6 col-md-5">
        <div class="thumbnail">
            <div class="caption">
                <h3 class="text-center">How do break points work?</h3>
                <p>Break length (in minutes) * Break point value</p>
                <p>Break point values (points per minute)</p>
                <ul>
                    <li>I took a break: 1pt</li>
                    <li>I moved around: 3pts</li>
                    <li>I talked to someone: 3pts</li>
                    <li>I went outside: 3pts</li>
                    <li>I took a tech free break: 5pts</li>
                    <li>I took a lunch break: 1pt</li>
                    <li>I took a lunch break away from my desk: 3pts</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BreakTypeId" class="control-label"></label>
                <select asp-for="BreakTypeId" class="form-control" asp-items="ViewBag.BreakTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
