@model TakeABreak.Models.Day

@{
    ViewData["Title"] = "Create";
}

<h2>Add New Daily Break Goal</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PointsGoal" class="control-label"></label>
                <input asp-for="PointsGoal" class="form-control" />
                <span asp-validation-for="PointsGoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductivityRating" class="control-label"></label>
                <input asp-for="ProductivityRating" class="form-control" />
                <span asp-validation-for="ProductivityRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reminders" class="control-label"></label>
                <input asp-for="Reminders" class="form-control" />
                <span asp-validation-for="Reminders" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
