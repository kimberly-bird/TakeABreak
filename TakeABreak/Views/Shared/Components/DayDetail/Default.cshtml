@model TakeABreak.Models.Day

@if (Model == null)
{
    <h2>Welcome to Take a Break!</h2>
    <a asp-action="Create" asp-controller="Days">Get started here</a>
}
else
{
    <div class="container">
        <h2 class="text-center">Break Dashboard</h2>

        <div class="row text-center">
            <div class="col-sm-4">
                <div class="thumbnail thumbnail-dash">
                    <div class="caption">
                        <h3>Today is @Model.Date.DayOfWeek, @Model.Date.Month/@Model.Date.Day/@Model.Date.Year</h3>
                        <p>I've earned: @Model.PointsEarned points today</p>
                        <p><a href="../Breaks/Create" class="btn btn-primary" role="button">Add a Break to Today's Goal</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="thumbnail thumbnail-dash">
                    <div class="caption">
                        <h3>Reminders: @Model.Reminders</h3>
                        <p>Today's goal: @Model.PointsGoal points</p>
                        <p><a asp-action="Edit" asp-route-id="@Model.DayId" asp-controller="Days" class="btn btn-primary" role="button">Edit Daily Goal</a></p>
                    </div>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="thumbnail thumbnail-dash">
                    <div class="caption">
                        @if (Model.ProductivityRating == null)
    {
                    <h3>How productive have you been today?</h3>
                    <a asp-action="Edit" asp-route-id="@Model.DayId" asp-controller="Days" class="btn btn-primary" role="button">Add Productivity Rating</a>
}
else
{
                    <h3>Productivity Rating:</h3>
                    <p>@Model.ProductivityRating</p>
                    <p><a asp-action="Edit" asp-route-id="@Model.DayId" asp-controller="Days" class="btn btn-primary" role="button">Edit Productivity Rating</a></p>
}
                    </div>
                </div>
            </div>
        </div>
    </div>
}




