@model TakeABreak.Models.Day

<h3>Daily Goal</h3>
<ul>
    <li>Date: @Model.Date</li>
    <li>I've earned: @Model.PointsEarned points today</li>
    <li>Today's goal: @Model.PointsGoal points</li>
    <li>@Model.Reminders</li>
    <li><a asp-action="Edit" asp-route-id="@Model.DayId" asp-controller="Days">Edit Daily Goal</a></li>
</ul>

